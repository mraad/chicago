<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 top="5" right="10"
		 initialize="onInit(event)">
	<fx:Script>
		<![CDATA[
			import com.esri.model.ConfigModel;
			
			import mx.core.FlexGlobals;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			
			import spark.components.TitleWindow;
			
			protected var isShown:Boolean = false;
			protected var titleWindow:TitleWindow;

			protected function onInit(event:FlexEvent):void
			{
				titleWindow = new BasemapThumbnailsWindow();
				titleWindow.addEventListener(CloseEvent.CLOSE, onClose);
			}
			
			protected function onClick(event:MouseEvent):void
			{
				isShown = !isShown;
				isShown ? show() : hide();
			}
			
			protected function onClose(event:CloseEvent):void
			{
				hide();
			}
			
			protected function show():void
			{
				PopUpManager.addPopUp(titleWindow, this.parent);
				PopUpManager.centerPopUp(titleWindow);
			}
			
			protected function hide():void
			{
				PopUpManager.removePopUp(titleWindow);
				isShown = false;	
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:Fade id="fadeIn" alphaFrom="0.0" alphaTo="1.0" duration="500" target="bmContainer" />
		<s:Fade id="fadeOut" alphaFrom="1.0" alphaTo="0.0" duration="1000" target="bmContainer" />
	</fx:Declarations>
	
	<s:Image id="bmImage" 
			 source="assets/images/iBasemaps.png" alpha="0.7" 
			 useHandCursor="true" buttonMode="true" 
			 click="onClick(event)"/>	
	
</s:Group>
